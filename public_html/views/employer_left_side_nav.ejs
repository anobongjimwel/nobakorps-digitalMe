<div class="col-lg-3 pt-4 d-lg-inline-block d-none">
    <div class="card">
        <img class="card-img-top" src="/img/user/employer-banner.jpg" alt="Card image cap">

        <div class="card-body">
            <div class="row">
                <div class="col-12">
                    <img src="/img/user/default.png" style="height: 50px;"/><br /><br />
                </div>
                <div class="col-12">
                    <span style="font-size: 1.1em">Name</span><br />
                    <span class="navlink" style="font-size: 0.9em"><%- lang.applicants.words.nav_logout %></span>
                </div>
            </div>
            <br />
            <h6 class="card-title"><%- lang.applicants.words.nav_navigation %></h6>
            <p class="card-description">
                <span class="d-inline-block navlink nav-home1"><%- lang.applicants.words.nav_home %></span><br />
                <span class="d-inline-block navlink nav-profile"><%- lang.applicants.words.nav_profile %></span><br />
                <span class="d-inline-block navlink nav-skills"><%- lang.applicants.words.nav_skills %></span><br />
                <span class="d-inline-block navlink nav-documents"><%- lang.applicants.words.nav_documents %></span><br />
                <span class="d-inline-block navlink nav-experiences"><%- lang.applicants.words.nav_experiences %></span><br />
                <span class="d-inline-block navlink nav-statistics"><%- lang.applicants.words.nav_statistics %></span><br />
            </p>
        </div>
    </div>
    <%
    var adCount = 0
    for (var adc in lang.ads) adCount+=1
    if (adc != 0) {
        var ad = lang.ads[Math.floor(Math.random() * adc)]
    %>
    <div class="card mt-4 d-lg-block d-none">
        <img class="card-img-top" src="/img/ads/<%- ad.img %>" alt="Ad">
        <div class="card-body">
            <p class="card-description" style="overflow-x: hidden">
                <span style="font-size: 0.75em"><%- lang.applicants.words.nav_sponsored %></span><br />
                <span style="font-weight: 600; line-height: 1; white-space: nowrap; font-size: 1.05em"><%- ad.title %></span><br />
                <span style="font-size: 1em"><%- ad.description %></span>
            </p>
        </div>
    </div>
    <% } %>
</div>
